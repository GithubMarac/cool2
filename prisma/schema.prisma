generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  lead        String
  imagePath   String
  prepTime    Int
  difficulty  String
  category    String
  servings    Int
  ingredients String
  steps       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}